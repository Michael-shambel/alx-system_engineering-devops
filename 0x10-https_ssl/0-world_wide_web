#!/usr/bin/env bash
# Function to get DNS information for a subdomain
get_dns_info() {
    subdomain=$1
    domain=$2

    # Perform DNS lookup for the subdomain
    result=$(dig $subdomain.$domain | awk '/ANSWER SECTION/{getline; print}')

    # Extract record type and destination IP from the result
    record_type=$(echo "$result" | awk '{print $3}')
    destination=$(echo "$result" | awk '{print $5}')

    # Print the information
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script
if [ $# -eq 0 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain=$1

# If subdomain is not provided, set default subdomains
if [ $# -eq 1 ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
else
    subdomains=("$2")
fi

# Loop through subdomains and get DNS information
for subdomain in "${subdomains[@]}"; do
    get_dns_info "$subdomain" "$domain"
done
